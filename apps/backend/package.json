{
  "name": "@cinememo/backend",
  "version": "0.0.10",
  "scripts": {
    "dev": "bunx kill-port 5500 && NODE_DEBUG=* NODE_ENV=development bun --watch src/index.ts",
    "build": "NODE_ENV=production bun build --target=bun --sourcemap=linked ./src/index.ts --outdir ./dist",
    "start": "NODE_ENV=production bun ./dist/index.js",
    "test": "bun test",
    "db:migrate": "bun run ./src/db/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "prettier": "prettier --write .",
    "lint": "eslint --fix .",
    "clean": "rimraf -rf node_modules"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.1.1",
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/cron": "^1.1.0",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "@react-email/components": "^0.0.21",
    "@sentry/bun": "^8.25.0",
    "arctic": "^1.9.2",
    "bullmq": "^5.12.0",
    "country-code-lookup": "^0.1.3",
    "drizzle-orm": "^0.31.4",
    "drizzle-typebox": "^0.1.1",
    "elysia": "^1.1.4",
    "elysia-ip": "^1.0.7",
    "elysia-rate-limit": "^4.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lucia": "^3.2.0",
    "oslo": "^1.2.1",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "resend": "3.4.0",
    "ua-parser-js": "^1.0.38",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.11.6",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.22.8",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}